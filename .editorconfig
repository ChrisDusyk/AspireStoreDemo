# .editorconfig for CopilotDemoApp
root = true

# C# files
[*.cs]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# TypeScript, JavaScript, JSON, Markdown
[*.{ts,tsx,js,jsx,json,md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# HTML files
[*.html]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# CSS files
[*.css]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Fallback for all files
[*]
trim_trailing_whitespace = true
insert_final_newline = true
